<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.MainPage"
             NavigatedTo="ContentPage_NavigatedTo"
             NavigatedFrom="ContentPage_NavigatedFrom">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!-- Tool bar Up Top -->
            <Grid Grid.Row="0"
                    ColumnSpacing="8"
                    Margin="0,0,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="Show Completed Tasks:"/>
                    <CheckBox Margin="5"
                              Grid.Column="1"
                              IsChecked="{Binding IsShowCompleteToDos}"/>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="Select Project:"/>
                    <Picker Grid.Column="1"
                            ItemsSource="{Binding ProjectNames}"
                            SelectedItem="{Binding SelectedProject}"/>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.15*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Entry Grid.Column="0"
                           Text="{Binding Query}"/>
                    <Button Grid.Column="1"
                            Text="Search"
                            Clicked="SearchClicked"/>
                </Grid>

            </Grid>
            <!-- List of Projects -->
            <ListView Grid.Row="1"
                      ItemsSource="{Binding ToDos}"
                      SelectedItem="{Binding SelectedToDo}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <!-- Checkbox -->
                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding Model.IsComplete}"/>
                                <!-- Name / Description -->
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0"
                                           TextColor="Red"
                                           Text="{Binding Model.Name}"/>
                                    <Label Grid.Row="1"
                                           Text="{Binding Model.Description}"/>
                                </Grid>
                                <!-- Name / Description -->
                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0"
                                           Text="Project: "/>
                                    <Label Grid.Row="1"
                                           Text="{Binding ProjectName}"/>
                                </Grid>
                                <!-- Date -->
                                <DatePicker Grid.Column="3"
                                            Date="{Binding Model.DueDate}"/>
                                <!-- Delete Button -->
                                <Button Grid.Column="4"
                                        Text="Delete"
                                        Clicked="InlineDeleteClicked"
                                        Command="{Binding DeleteCommand}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!-- Add ToDo Bar -->
            <Grid Grid.Row="2"
                  ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Text="Add ToDo"
                        Clicked="AddToDoClicked"/>
                <Button Grid.Column="1"
                        Text="Edit Selected ToDo"
                        Clicked="EditToDoClicked"/>
                <Button Grid.Column="2"
                        Text="Delete Selected ToDo"
                        Clicked="DeleteToDoClicked"/>
                <Button Grid.Column="3"
                        Text="Add Project"
                        Clicked="AddProjectClicked"/>
                <Button Grid.Column="4"
                        Text="Edit Project"
                        Clicked="EditProjectClicked"/>
                <Button Grid.Column="5"
                        Text="Delete Selected Project"
                        Clicked="DeleteProjectClicked"/>
            </Grid>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
